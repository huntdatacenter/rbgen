def build( bld ):
	bld.program(
		source = 'bgen-cat.cpp',
		target = 'bgen-cat',
		use = 'bgen appcontext zlib boost bgen_revision_autogenerated',
		cxxflags = ['-std=c++11']
	)
	bld.program(
		source = 'bgen-index.cpp',
		target = 'bgen-index',
		use = 'bgen appcontext db zlib boost bgen_revision_autogenerated',
		cxxflags = ['-std=c++11']
	)
